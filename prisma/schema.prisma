generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

// Enum para definir os papéis de usuário
enum Role {
  USER
  ADMIN
}

// Modelo de Usuário para Login
model User {
  id String @id @default(cuid())
  email String @unique
  password String
  name String?
  role Role @default(USER)
  createdAt DateTime @default(now())
}

// Modelo do Livro
model Book {
  id String @id @default(cuid())
  title String
  author String
  price Float
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}